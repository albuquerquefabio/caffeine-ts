{
  "name": "caffeine-pack",
  "private": true,
  "main": "src/index.ts",
  "author": "FÃ¡bio Albuquerque",
  "scripts": {
    "start": "pnpm stop && pm2-dev pm2.dev.config.js",
    "start:prod": "node -r esm ./build/index.js",
    "stop": "pm2 delete pm2.simple.config.js pm2.cluster.config.js",
    "build": "pnpm lint && rimraf ./build && tsc",
    "lint": "eslint src --ext .ts",
    "lint-and-fix": "eslint src --ext .ts --fix",
    "dev-simple": "pnpm build -- -dev && pnpm stop && pm2-dev pm2.simple.config.js",
    "dev-cluster": "pnpm build -- -dev && pnpm stop && pm2-dev pm2.cluster.config.js",
    "simple": "pnpm build && pnpm stop && pm2 start pm2.simple.config.js --env production",
    "cluster": "pnpm build && pnpm stop && pm2 start pm2.cluster.config.js --env production",
    "update": "pm2 update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@tinyhttp/app": "latest",
    "chalk": "^4.1.1",
    "mongoose": "^5.12.15",
    "mongoose-paginate": "^5.0.3",
    "pm2": "^5.1.0",
    "redis": "^3.1.2",
    "redis-jwt": "^1.4.0",
    "socket.io": "^4.1.2",
    "socket.io-redis": "^6.1.1",
    "zoya": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esm": "^3.2.25",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  }
}
