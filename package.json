{
  "name": "caffeine-ts",
  "version": "1.0.0",
  "description": "Caffeine-TS is a simple, lightweight, monorepo, and easy to use framework for building web applications in TypeScript.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "pnpm --filter caffeine-pack run start",
    "stop": "pnpm --filter caffeine-pack run stop",
    "build": "pnpm --filter caffeine-pack run build",
    "build:docker": "pnpm --filter caffeine-pack run build:docker",
    "prod": "pnpm --filter caffeine-pack run prod",
    "prod:cluster": "pnpm --filter caffeine-pack run prod:cluster",
    "prod:docker": "pnpm --filter caffeine-pack run prod:docker",
    "lint": "pnpm --filter caffeine-pack run lint",
    "lint:fix": "pnpm --filter caffeine-pack run lint:fix",
    "pretty": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "framework",
    "web",
    "node",
    "nodejs",
    "tinyhttp",
    "api",
    "rest",
    "restful",
    "pnpm",
    "monorepo",
    "mongodb",
    "mongoose",
    "redis",
    "socket.io",
    "socketio",
    "socket",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "pretty-quick": "^3.1.3"
  }
}