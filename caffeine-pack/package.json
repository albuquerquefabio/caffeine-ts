{
  "name": "caffeine-pack",
  "private": true,
  "main": "src/index.ts",
  "author": "FÃ¡bio Albuquerque",
  "scripts": {
    "start": "pnpm stop && ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "stop": "pm2 delete pm2.production.config.js pm2.cluster.config.js",
    "build": "pnpm build:ts && pnpm compile",
    "build:docker": "docker build --pull --rm -f Dockerfile -t caffeinets:latest ./",
    "build:ts": "tsc --extendedDiagnostics",
    "compile": "babel src --extensions .ts,.js --out-dir build",
    "dev": "pnpm build -- -dev && pnpm stop && pm2-dev pm2.production.config.js",
    "dev:cluster": "pnpm build -- -dev && pnpm stop && pm2-dev pm2.cluster.config.js",
    "prod": "pnpm build && pnpm stop && pm2 start pm2.production.config.js --env production",
    "prod:cluster": "pnpm build && pnpm stop && pm2 start pm2.cluster.config.js --env production",
    "prod:docker": "docker compose -f docker-compose.production.yml up -d --build",
    "update": "pm2 update",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
