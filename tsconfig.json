{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./build", // Types should go into this directory.
    "rootDir": "./src/",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "paths": {
      "@api/*": ["./src/api/*"],
      "@auth/*": ["./src/auth/*"],
      "@env/*": ["./src/environment/*"],
      "@lib/*": ["./src/lib/*"],
      "@services/*": ["./src/services/*"]
    },
    "importHelpers": true,
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./build", "./logs"]
}
